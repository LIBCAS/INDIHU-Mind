# This is a Dockerfile for running the backend on a local machine
# It is used by Docker Compose file: local-docker-compose.yml

# Compile project with Maven; Run compiled .jar with shell script

FROM maven:3.6.3-jdk-8-slim AS MAVEN_BUILD
MAINTAINER radvan@inqool.cz

COPY pom.xml /build/

COPY src /build/src/

WORKDIR /build/

RUN mvn clean package -DskipTests

FROM openjdk:8-jre-alpine

COPY --from=MAVEN_BUILD /build/target/vzb-1.0-SNAPSHOT.jar /usr/src/api.jar

WORKDIR /usr/src

COPY run.sh /run.sh
RUN chmod +x /run.sh

ENTRYPOINT ["/run.sh"]